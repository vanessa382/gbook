<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @assignment.name %>
</p>

<p>
  <strong>Point total:</strong>
  <%= @assignment.point_total %>
</p>

<p>
  <strong>Category:</strong>
  <%= Category.find(@assignment.category_id).name %>
</p>

<% @gbook.students.each do |student| %>
	<p> <%= student.name %> </p>
<% end %>

<% @assignment.grades.each do |grade| %>
	<%= Student.find(grade.student_id).name + grade.score.to %>
<% end %>

<%= link_to 'Edit', edit_gbook_assignment_path(@gbook,@assignment) %> |
<%= link_to 'Back', gbook_assignments_path %>

